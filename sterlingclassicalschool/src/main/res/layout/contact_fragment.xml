<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        style="@style/FontHeader"
        android:text="@string/contact_title_address"
        android:id="@+id/tv_contact_title_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="@dimen/small_headline_and_body"
            android:paddingBottom="@dimen/small_headline_and_body"
            android:text="@string/contact_text_address"
            android:id="@+id/tv_contact_text_adress" />

    <TextView
        style="@style/FontHeader"
        android:text="@string/contact_title_directions"
        android:id="@+id/tv_contact_title_directions" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="@dimen/small_headline_and_body"
            android:paddingBottom="@dimen/small_headline_and_body"
            android:text="@string/contact_text_directions"
            android:id="@+id/tv_contact_text_directions" />

    <TextView
        style="@style/FontHeader"
        android:text="@string/contact_title_phone"
        android:id="@+id/tv_contact_title_phone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="@dimen/small_headline_and_body"
            android:paddingBottom="@dimen/small_headline_and_body"
            android:text="@string/contact_text_phone"
            android:id="@+id/btn_contact_phone" />

</LinearLayout>