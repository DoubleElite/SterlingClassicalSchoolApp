<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/FontHeader"
            android:text="@string/admissions_title_attend"
            android:id="@+id/tv_admissions_title_attend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="@dimen/small_headline_and_body"
                android:paddingBottom="@dimen/small_headline_and_body"
                android:text="@string/admissions_text_attend"
                android:id="@+id/tv_admissions_text_attend" />

        <TextView
            style="@style/FontHeader"
            android:text="@string/admissions_title_read"
            android:id="@+id/tv_admissions_title_read" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="@dimen/small_headline_and_body"
                android:paddingBottom="@dimen/small_headline_and_body"
                android:text="@string/admissions_text_read"
                android:id="@+id/tv_admissions_text_read" />

        <TextView
            style="@style/FontHeader"
            android:text="@string/admissions_title_family"
            android:id="@+id/tv_admissions_title_family" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="@dimen/small_headline_and_body"
                android:paddingBottom="@dimen/small_headline_and_body"
                android:text="@string/admissions_text_family"
                android:id="@+id/tv_admissions_text_family" />

        <TextView
            style="@style/FontHeader"
            android:text="@string/admissions_title_placement"
            android:id="@+id/tv_admissions_title_placement" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="@dimen/small_headline_and_body"
                android:paddingBottom="@dimen/small_headline_and_body"
                android:text="@string/admissions_text_placement"
                android:id="@+id/tv_admissions_text_placement" />

        <TextView
            style="@style/FontHeader"
            android:text="@string/admissions_title_acceptance"
            android:id="@+id/tv_admissions_title_acceptance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="@dimen/small_headline_and_body"
                android:paddingBottom="@dimen/small_headline_and_body"
                android:text="@string/admissions_text_acceptance"
                android:id="@+id/tv_admissions_text_acceptance" />

        <TextView
            style="@style/FontHeader"
            android:text="@string/admissions_title_finalize"
            android:id="@+id/tv_admissions_title_finalize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="@dimen/small_headline_and_body"
                android:paddingBottom="@dimen/small_headline_and_body"
                android:text="@string/admissions_text_finalize"
                android:id="@+id/tv_admissions_text_finalize" />

    </LinearLayout>

</ScrollView>